{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "paths": {
      "@dma-library/*": [
        "../dma-library/src/*"
      ],
      "utils/*": ["../dma-common/utils/*"],
      "@oasisdex/addresses": ["../addresses/src/index.ts"]
    }
  },
  "include": [
    "./configs/**/*",
    "./deployment/**/*",
    "./types",
    "./hardhat.config.ts"
  ],
}