{
  "compilerOptions": {
    "target": "es2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "composite": true,
    "strict": true,
    "outDir": "lib/esm",
    "baseUrl": ".",
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    // Generate d.ts files
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "typeRoots": ["../../node_modules/@types"],
    "paths": {
      /* Aliases used internally by referenced packages */
      "@dma-deployments/utils/*": ["../dma-deployments/utils/*"],
      "@dma-deployments/types/*": ["../dma-deployments/types/*"],
      "@dma-deployments/constants": ["../dma-deployments/constants/index.ts"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "../dma-deployments"],
  "references": [
    { "path": "./tsconfig.cjs.json" }
  ]
}
