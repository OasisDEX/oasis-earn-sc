{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "outDir": "lib",
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    // Generate d.ts files
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*",
  ]
}