{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      /* Internal package aliases */
      "@typechain/*": ["./typechain/*"],
      "@abis/*": ["../abis/*"],
      "@dma-contracts/test/*": [
        "./test/*"
      ],
      "@dma-contracts/scripts/*": [
        "./scripts/*"
      ],
      "@dma-contracts/*": [
        "./*"
      ],
      /* Aliases used internally by referenced packages */
      "@dma-common/constants": ["../dma-common/constants/index.ts"],
      "@dma-common/utils/*": ["../dma-common/utils/*"],
      "@dma-common/types/*": ["../dma-common/types/*"],
      "@dma-common/test-utils": ["../dma-common/test-utils/index.ts"],
      "@dma-common/test-utils/*": ["../dma-common/test-utils/*"],
      "@dma-deployments/utils/*": ["../dma-deployments/utils/*"],
      "@dma-deployments/types/*": ["../dma-deployments/types/*"],
      "@dma-deployments/constants": ["../dma-deployments/constants/index.ts"],
      "@dma-deployments/operation-definitions": ["../dma-deployments/operation-definitions/index.ts"]
    },
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "include": [
    "./bootstrap-env.ts",
    "./hardhat.config.ts",
    "test/**/*.ts",
    "tasks/**/*.ts",
    "scripts/**/*.ts"
  ],
}
