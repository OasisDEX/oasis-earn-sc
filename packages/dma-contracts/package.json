{
  "name": "@oasisdex/dma-contracts",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "npx ts-node tasks/update-block-number.ts && npx hardhat node --max-memory 8192 --fork $(grep MAINNET_URL ../../.env | cut -d '=' -f2)",
    "compile": "yarn clean && npx hardhat compile",
    "clean": "rm -rf ./typechain && rm -rf ./artifacts && rm -rf ./cache",
    "format": "prettier --write \"./**/*.{ts,tsx,js,jsx}\" && yarn lint:fix && prettier --write 'contracts/**/*.sol'",
    "format:check": "prettier --check \"./**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint . --fix --ext .ts",
    "lint": "eslint . --ext .ts --max-warnings=0 && prettier --list-different 'contracts/**/*.sol'",
    "test": "yarn test:unit && yarn:test:e2e",
    "test:e2e": "yarn clean && npx hardhat test --grep E2E",
    "test:unit": "yarn clean && npx hardhat test --grep Unit",
    "task:deploy:dev": "yarn compile && npx hardhat deploy --network local --debug",
    "task:position:open": "npx hardhat createPosition --usefallbackswap --network local",
    "task:position:close": "npx hardhat closePosition --network local"
  },
  "dependencies": {
    "@oasisdex/abis": "*",
    "@oasisdex/addresses": "*",
    "@oasisdex/dma-common": "*",
    "@oasisdex/dma-library": "*",
    "@oasisdex/domain": "*",
    "@openzeppelin/contracts": "4.7.3",
    "@safe-global/safe-core-sdk": "^3.3.2",
    "@safe-global/safe-core-sdk-types": "^1.9.0",
    "@safe-global/safe-ethers-adapters": "^0.1.0-alpha.16",
    "@safe-global/safe-ethers-lib": "^1.9.2",
    "@safe-global/safe-service-client": "^2.0.0"
  },
  "devDependencies": {

    "@ethereumjs/tx": "3.5.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@tenderly/hardhat-tenderly": "^1.6.1",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "6.1.5",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "hardhat": "^2.13.0",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-contract-sizer": "^2.0.1",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-log-remover": "^2.0.0",
    "hardhat-tracer": "^1.1.1",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "solhint": "^3.2.2",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.13",
    "solidity-docgen": "^0.6.0-beta.29",
    "tsconfig-paths": "^4.1.2",
    "typechain": "8.1.1",
    "typescript": "^5.0.4"
  },
  "files": [
    "tsconfig.json"
  ]
}
