{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "paths": {
      "@dma-common/constants": ["./constants/index.ts"],
      "@dma-common/utils/*": ["./utils/*"],
      "@dma-common/types/*": ["./types/*"],
      "@oasisdex/addresses": ["../addresses/src/index.ts"],
      /* Aliases used internally by referenced packages */
      "@dma-deployments/utils/*": ["../dma-deployments/utils/*"],
      "@dma-deployments/types/*": ["../dma-deployments/types/*"],
      "@dma-deployments/constants/*": ["../dma-deployments/constants/*"]
    },
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "include": [
    "../addresses/src/**/*",
    "./constants/**/*",
    "./utils/**/*",
    "./test-utils/**/*",
    "./types",
    "./hardhat.config.ts"
  ],
}