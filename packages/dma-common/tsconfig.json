{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "paths": {
      "@abis/external/*": ["../abis/external/*"],
      "@abis/system/*": ["../abis/system/*"],
      "@dma-common/constants": ["./constants/index.ts"],
      "@dma-common/utils/*": ["./utils/*"],
      "@dma-common/test-utils": ["./test-utils/index.ts"],
      "@dma-common/test-utils/*": ["./test-utils/*"],
      "@dma-common/types/*": ["./types/*"],
      "@dma-deployments/addresses": ["../dma-deployments/addresses/index.ts"],
      "@dma-deployments/utils/*": ["../dma-deployments/utils/*"],
      "@dma-deployments/types/*": ["../dma-deployments/types/*"],
      "@dma-deployments/constants": ["../dma-deployments/constants/index.ts"],
      "@dma-deployments/operation-definitions": ["../dma-deployments/operation-definitions/index.ts"]
    },
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "include": [
    "../addresses/src/**/*",
    "./constants/**/*",
    "./utils/**/*",
    "./test-utils/**/*",
    "./types",
    "./hardhat.config.ts",
    "../dma-deployments/**/*",
  ],
}