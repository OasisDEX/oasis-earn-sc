{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "paths": {
      "utils/*": ["./utils/*"],
      "@oasisdex/addresses": ["../addresses/src/index.ts"],
    },
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "include": [
    "../addresses/src/**/*",
    "./utils/**/*",
    "./test-utils/**/*",
    "./types",
    "./hardhat.config.ts"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}