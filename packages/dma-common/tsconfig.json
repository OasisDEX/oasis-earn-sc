{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "paths": {
      "@utils/*": ["./utils/*"]
    },
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "include": [
    "./utils/**/*",
    "./test-utils/**/*",
    "./hardhat.config.ts"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}