{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "paths": {
      "@abi/*": ["./abi/*"],
      "@helpers/*": ["./helpers/*"]
    }
  },
  "include": ["abi/**/*","./helpers", "./scripts", "./test", "packages/**/*", "./typechain/**/*", "tasks/**/*"],
  "files": ["./hardhat.config.ts"]
}
